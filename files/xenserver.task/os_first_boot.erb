<%# -*- shell-script -*- %>

exec >> $1/var/log/razor2.log 2>&1

echo "Starting os_first_boot"
wget <%= log_url("os_first_boot start") %>

cat <<EOF > /etc/motd
Installed by Razor using <%= task.label %> - <%= task.description %>
Repo: <%= repo_url %>
Node: <%= node_url %>
Install log: /var/log/razor.log
EOF

sed -i '/razor_os_first_boot/d' /etc/rc.d/rc.local

wget <%= broker_install_url %> | /bin/bash

<%= render_template("store_ip") %>

<%= render_template("os_complete") %>

wget <%= log_url("os_first_boot finish") %>
