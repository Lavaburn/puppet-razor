#!/bin/bash

set -e

# Install gems using bundler (v1 supports Ruby 2.0.0)
gem install bundler -v '~> 1.8.2'
bundle install --path .bundle/gems/

# Execute Rake-task: build
bundle exec rake build

# Build LiveCD
./build-livecd
./build-livecd-root

# Rename image
last_tag=$(git describe)
ln -s pkg/microkernel-${last_tag#release-}.tar pkg/microkernel.tar
